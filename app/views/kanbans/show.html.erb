<p style="color: green"><%= notice %></p>
<%= render @kanban %>
<div class="kanban" data-id="<%= @kanban.id %>">
  <% @kanban.kanban_columns.each do |column| %>
    <ul class="kanban-col" data-col-id=<%= column.id %> data-controller="sortable" data-sortable-animation-value="150">
      <li class="kanban-col-name"><%= column.name %></li>
      <% column.cards.sort_by{ |card| card.position }.each do |item| %>
        <li class="kanban-col-item" data-item-id=<%= item.id %>>
          <%= item.content %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
<div class="experiment">
  <%# experiment %>
  <table class="table table-bordered" id="classroom-table">
    <thead>
      <tr>
        <th>Column 1</th>
        <th>Aisle</th>
        <th>Column 2</th>
      </tr>
    </thead>
    <tbody>
      <td>
        <div class="list-group" id="column1" data-controller="sortable" data-sortable-animation-value="150">
          <li class="list-group-item column-student">
            Tatsuya Hirotani
          </li>
          <li class="list-group-item column-student">
            Kelly Fisher
          </li>
        </div>
      </td>
      <td>
        <div class="list-group" id="aisle1">
        </div>
      </td>
      <td>
        <div class="list-group" id="column2" data-controller="sortable" data-sortable-animation-value="150">
          <li class="list-group-item column-student">
            Ariel Cardinal
          </li>
          <li class="list-group-item column-student">
            Sakura Taiga
          </li>
          <li class="list-group-item column-student">
            Shinoka Tamanaka
          </li>
        </div>
      </td>
    </tbody>
  </table>
  <%# experiment end %>
</div>
<div>
  <%= link_to "Edit this kanban", edit_kanban_path(@kanban) %> |
  <%= link_to "Back to kanbans", kanbans_path %>
  <%= button_to "Destroy this kanban", @kanban, method: :delete %>
</div>
